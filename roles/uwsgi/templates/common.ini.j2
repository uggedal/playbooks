[uwsgi]

; Start a master process to manage all workers:
master = true

; Drop privileges to the same uid/gid as nginx:
uid = {{ uwsgi_user }}
gid = {{ uwsgi_user }}

; Ony allow access to sockets for {{ uwsgi_user }} uid/gid:
chmod-socket = 660

; Nicer process names:
auto-procname = true

; Disable request logging (access log of nginx suffices):
disable-logging = true

; systemd logging
logger = systemd

; Plugin directory
plugin_dir = /usr/lib/uwsgi

; Plugins
plugins = systemd_logger
